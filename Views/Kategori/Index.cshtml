@model IEnumerable<ButceTakip.Models.Kategori>

@{
    ViewData["Title"] = "Kategoriler";
}

<div class="row mb-3">
    <div class="col-md-6">
        <h3>ðŸ“‚ Kategorilerim</h3>
    </div>
    <div class="col-md-6 text-end">
        <a asp-action="Create" class="btn btn-success">
            <i class="fa-solid fa-plus"></i> Yeni Kategori Ekle
        </a>
    </div>
</div>

<div class="row">
    @foreach (var group in Model.GroupBy(x => x.Tur))
    {
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm">
                <div class="card-header bg-@(group.Key == "Gelir" ? "success" : "danger") text-white">
                    <h5 class="mb-0"><i class="fas fa-@(group.Key == "Gelir" ? "plus-circle" : "minus-circle")"></i> @group.Key Kategorileri</h5>
                </div>
                <div class="card-body p-0">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>BaÅŸlÄ±k</th>
                                <th>Ä°kon</th>
                                <th class="text-end">Ä°ÅŸlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in group)
                            {
                                <tr>
                                    <td>@item.Baslik</td>
                                    <td>@item.Ikon</td>
                                    <td class="text-end">
                                        <form asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline;">
                                            <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Silmek istediÄŸine emin misin?');">Sil</button>
                                        </form>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>