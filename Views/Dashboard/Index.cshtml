<!-- BAR CHART: AylÄ±k Gelir/Gider KarÅŸÄ±laÅŸtÄ±rmasÄ± -->
<div class="row mb-4">
    <div class="col-12">
        <div class="card shadow-sm">
            <div class="card-header fw-bold bg-white">
                ðŸ“Š AylÄ±k Gelir/Gider KarÅŸÄ±laÅŸtÄ±rmasÄ± (Son 6 Ay)
            </div>
            <div class="card-body">
                <canvas id="barChart" style="max-height:350px"></canvas>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
    // --- 1. DOUGHNUT CHART ---
    // Veri yoksa hata vermemesi iÃ§in kontrol
    const doughnutCanvas = document.getElementById('doughnutChart');
    if (doughnutCanvas) {
        new Chart(doughnutCanvas, {
            type: 'doughnut',
            data: {
                labels: @Html.Raw(ViewBag.DoughnutLabels),
                datasets: [{
                    data: @Html.Raw(ViewBag.DoughnutData),
                    backgroundColor: ['#ff6384', '#36a2eb', '#ffcd56', '#4bc0c0', '#9966ff', '#ff9f40'],
                    hoverOffset: 4
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: { position: 'bottom' },
                    tooltip: {
                        callbacks: {
                            label: function(context) {
                                let label = context.label || '';
                                if (label) {
                                    label += ': ';
                                }
                                label += new Intl.NumberFormat('tr-TR', { style: 'currency', currency: 'TRY' }).format(context.parsed);
                                return label;
                            }
                        }
                    }
                }
            }
        });
    }

    // --- 2. SPLINE CHART ---
    const splineCanvas = document.getElementById('splineChart');
    if(splineCanvas){
        new Chart(splineCanvas, {
            type: 'line',
            data: {
                labels: @Html.Raw(ViewBag.SplineAxisX), // GÃ¼nler (1, 2, 3...)
                datasets: [
                    {
                        label: 'Gelir',
                        data: @Html.Raw(ViewBag.SplineIncome),
                        borderColor: '#198754',
                        backgroundColor: '#198754',
                        tension: 0.3,
                        pointRadius: 2
                    },
                    {
                        label: 'Gider',
                        data: @Html.Raw(ViewBag.SplineExpense),
                        borderColor: '#dc3545',
                        backgroundColor: '#dc3545',
                        tension: 0.3,
                        pointRadius: 2
                    }
                ]
            },
            options: {
                responsive: true,
                plugins: { legend: { position: 'top' } },
                scales: {
                    y: { beginAtZero: true },
                    x: { grid: { display: false } } // Dikey Ã§izgileri kaldÄ±rÄ±r, daha temiz gÃ¶rÃ¼nÃ¼r
                }
            }
        });
    }

    // --- 3. BAR CHART ---
    const barCanvas = document.getElementById('barChart');
    if (barCanvas) {
        new Chart(barCanvas, {
            type: 'bar',
            data: {
                labels: @Html.Raw(ViewBag.BarLabels),
                datasets: [
                    {
                        label: 'Gelir',
                        data: @Html.Raw(ViewBag.BarIncomes),
                        backgroundColor: '#198754',
                        borderColor: '#198754',
                        borderWidth: 1
                    },
                    {
                        label: 'Gider',
                        data: @Html.Raw(ViewBag.BarExpenses),
                        backgroundColor: '#dc3545',
                        borderColor: '#dc3545',
                        borderWidth: 1
                    }
                ]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: { position: 'top' },
                    tooltip: {
                        callbacks: {
                            label: function(context) {
                                let label = context.dataset.label || '';
                                if (label) {
                                    label += ': ';
                                }
                                label += new Intl.NumberFormat('tr-TR', { style: 'currency', currency: 'TRY' }).format(context.parsed.y);
                                return label;
                            }
                        }
                    }
                },
                scales: {
                    y: { beginAtZero: true }
                }
            }
        });
    }
</script>

