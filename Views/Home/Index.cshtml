@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Bartu Bütçe Takibi</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        body {
            margin: 0;
            padding: 0;
            font-family: 'Poppins', sans-serif;
            background: url('https://images.unsplash.com/photo-1554224155-6726b3ff858f?ixlib=rb-4.0.3&auto=format&fit=crop&w=1920&q=80') no-repeat center center fixed;
            background-size: cover;
            height: 100vh;
            overflow: hidden;
        }

        .overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.6);
            z-index: 1;
        }

        .navbar-custom {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            border-bottom: 1px solid rgba(255, 255, 255, 0.2);
            position: fixed;
            top: 0;
            width: 100%;
            z-index: 10;
        }

        .navbar-brand-custom {
            font-size: 1.5rem;
            font-weight: 600;
            color: white !important;
            text-shadow: 0 2px 4px rgba(0,0,0,0.5);
            cursor: pointer;
            transition: color 0.3s ease;
        }

        .navbar-brand-custom:hover {
            color: #007bff !important;
        }

        .toggle-btn {
            background: none;
            border: none;
            color: white;
            font-size: 1.2rem;
        }

        .content {
            position: relative;
            z-index: 2;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            height: 100vh;
            text-align: center;
            color: white;
        }

        .typewriter {
            font-size: 3rem;
            font-weight: 300;
            margin-bottom: 1rem;
            min-height: 4rem;
        }

        .description {
            font-size: 1.2rem;
            color: #ccc;
            max-width: 600px;
            line-height: 1.6;
        }

        .sidebar {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
        }

        .sidebar .nav-link {
            color: #333;
            font-weight: 500;
            padding: 1rem 1.5rem;
            border-bottom: 1px solid rgba(0,0,0,0.1);
        }

        .sidebar .nav-link.active {
            background: rgba(0,123,255,0.2);
            color: #007bff;
            border-left: 4px solid #007bff;
            font-weight: 600;
        }

        .sidebar .nav-link i {
            margin-right: 0.5rem;
        }
    </style>
</head>
<body>
    <div class="overlay"></div>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-custom">
        <div class="container-fluid d-flex justify-content-between align-items-center">
            <button class="toggle-btn" type="button" data-bs-toggle="offcanvas" data-bs-target="#sidebar" aria-controls="sidebar">
                <i class="fas fa-bars"></i>
            </button>
            <a class="navbar-brand-custom text-decoration-none" asp-area="" asp-controller="Home" asp-action="Index">Bartu Bütçe Takibi</a>
            <div></div> <!-- Spacer for centering -->
        </div>
    </nav>

    <!-- Sidebar -->
    <div class="offcanvas offcanvas-start sidebar" tabindex="-1" id="sidebar" aria-labelledby="sidebarLabel">
        <div class="offcanvas-header">
            <h5 class="offcanvas-title" id="sidebarLabel">Menü</h5>
            <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
            <nav class="nav flex-column">
                <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" && ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")" href="@Url.Action("Index", "Home")"><i class="fas fa-home"></i> Ana Sayfa</a>
                <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Dashboard" ? "active" : "")" href="@Url.Action("Index", "Dashboard")"><i class="fas fa-chart-line"></i> Genel Bakış</a>
                <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Islem" ? "active" : "")" href="@Url.Action("Index", "Islem")"><i class="fas fa-exchange-alt"></i> Gelir/Gider</a>
                <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Kategori" ? "active" : "")" href="@Url.Action("Index", "Kategori")"><i class="fas fa-plus-circle"></i> Kategori Ekle</a>
            </nav>
        </div>
    </div>

    <!-- Main Content -->
    <div class="content">
        <div class="typewriter" id="typewriter"></div>
        <div class="description">
            Kişisel bütçenizi kolayca yönetin, gelir ve giderlerinizi takip edin, finansal hedeflerinize ulaşın.
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Typewriter effect
        const text = "Hoşgeldin Bartu";
        let index = 0;
        let isDeleting = false;
        const speed = 100; // typing speed
        const deleteSpeed = 50; // deleting speed
        const pause = 2000; // pause before deleting

        function typeWriter() {
            const element = document.getElementById('typewriter');
            if (!isDeleting) {
                element.innerHTML = text.substring(0, index + 1);
                index++;
                if (index === text.length) {
                    isDeleting = true;
                    setTimeout(typeWriter, pause);
                    return;
                }
            } else {
                element.innerHTML = text.substring(0, index);
                index--;
                if (index === 0) {
                    isDeleting = false;
                }
            }
            setTimeout(typeWriter, isDeleting ? deleteSpeed : speed);
        }

        // Start typewriter when page loads
        window.onload = function() {
            typeWriter();
        };
    </script>
</body>
</html>
